<script>
    function enviarPedido(producto) {
        let telefono = "0983119816"; // Reemplaza con tu n√∫mero (incluye c√≥digo de pa√≠s)
        let cantidad = "";
        let descripcion = "";

        if(producto === 'Pasteles') {
            cantidad = document.getElementById('qty-pasteles').value;
            descripcion = document.getElementById('desc-pasteles').value;
        } else if(producto === 'Fresas con Chocolate') {
            cantidad = document.getElementById('qty-fresas').value;
            descripcion = document.getElementById('desc-fresas').value;
        } else {
            descripcion = document.getElementById('desc-unico').value;
        }

        let mensaje = `¬°Hola Chocomouse! üç´\nMe gustar√≠a ordenar: *${producto}*\n`;
        if(cantidad) mensaje += `Cantidad: ${cantidad}\n`;
        if(descripcion) mensaje += `Detalles: ${descripcion}`;

        let url = `https://wa.me/${telefono}?text=${encodeURIComponent(mensaje)}`;
        window.open(url, '_blank');
    }
</script>

